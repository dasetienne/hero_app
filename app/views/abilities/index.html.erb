<h1>Abilities</h1>

<%= link_to "Create New Ability", new_ability_path %>

<br />
<br />
<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>
  <tbody>
    <% @abilities.each do |ability| %>
      <tr>
        <td><%= link_to(ability.name, ability_path(ability)) %></td>
        <td><%= link_to "edit", edit_ability_path(ability) %></td>
        <td><%= link_to "delete", ability_path(ability), method: :delete, data: {confirm: "Are you sure you want to delete this ability?"}%></td>
      </tr>
    <% end %>
  </tbody>
</table>
